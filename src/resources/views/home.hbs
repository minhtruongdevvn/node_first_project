<div class='mt-5'>
  <div class='row mb-5'>
    {{#each courses}}
      <div class='col-sm-6 col-lg-4 d-flex align-items-center justify-content-center'>
        <div class='card mt-2' style='width: 18rem;'>
          <img src='{{this.image}}' class='card-img-top' alt='...' />
          <div class='card-body'>
            <h5 class='card-title'>
              {{this.name}}
            </h5>
            <p class='card-text'>
              {{this.description}}
            </p>
            <a href='/courses/{{this.slug}}' class='btn btn-primary'>
              Show details
            </a>
          </div>
        </div>
      </div>
      {{else}}
      <p>
         No courses.  <a href="/courses/create"> Create now!</a>
      </p>
    {{/each}}
  </div>
  <a href='?sort=name;{{getSortType sort.type}}' class='btn btn-primary'>
    Sort by name
  </a>
  <a href='?sort=description;{{getSortType sort.type}}' class='btn btn-primary'>
    Sort by description
  </a>
</div>